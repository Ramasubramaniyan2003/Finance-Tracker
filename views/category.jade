extends layout 

block head 
    include ./head.jade
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    link(href='//cdn.datatables.net/v/bs/jszip-2.5.0/dt-1.11.2/b-2.0.0/b-colvis-2.0.0/b-html5-2.0.0/fc-3.3.3/fh-3.1.9/rg-1.1.3/datatables.min.css', rel='stylesheet')
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css">


block content 
    include ./sidebar.jade
        .row
            .col-sm-12
                section.panel
                    header.panel-heading
                        | Category
                        .btn-group.pull-right(style='margin:-8px 0 0;')
                            button#addTransaction.btn.btn-success(href='#categoryEntryModal', data-toggle='modal')
                                | Add Category
                                i.fa.fa-plus
                    #categoryEntryModal.modal.fade(aria-hidden='true', aria-labelledby='myModalLabel', role='dialog', data-keyboard="true", data-backdrop="static")
                            .modal-dialog
                                .modal-content
                                    form#addCategoryForm(role='form')
                                        .modal-header 
                                            button.close(aria-hidden='true', data-dismiss='modal', type='button') ×
                                            h4.modal-title Add Category
                                        .modal-body
                                            .row.form-group
                                                .col-sm-3(style="margin-top:0.5rem; margin-left:3rem; text-align:center;")
                                                    label.control-label(for='name') Name *
                                                .col-sm-6
                                                    input#date.form-control(type='text', name='name',style='width: 265px;', autocomplete="off", required)
                                            .row.form-group
                                                .col-sm-3(style="margin-top:0.5rem; margin-left:3rem; text-align:center;")
                                                    label.control-label(for='name') Type *
                                                .col-sm-6
                                                    select#type.form-select.form-control(name='type',style='width: 265px;', required )
                                                        option.form-control(value="0") Income
                                                        option.form-control(value="1") Expense
                                            .row.form-group
                                                .col-sm-3(style="margin-top:0.5rem; margin-left:3rem; text-align:center;")
                                                    label.control-label(for='notes') Notes
                                                .col-sm-6
                                                    textarea#notes.form-control(name="notes", cols="30", rows="4", placeholder='Comments' style="resize:none;")
                                        .modal-footer
                                            input#saveAddCategory.btn.btn-primary(type='submit', value='Save')
                    
                    #updateTransaction.modal.fade(aria-hidden='true', aria-labelledby='myModalLabel', role='dialog', data-keyboard="true", data-backdrop="static")
                        .modal-dialog
                            .modal-content
                                form#updateCategoryForm(role='form')
                                    .modal-header 
                                        button.close(aria-hidden='true', data-dismiss='modal', type='button') ×
                                        h4.modal-title Update Transaction
                                    .modal-body
                                        .row.form-group
                                            .col-sm-3(style="margin-top:0.5rem; margin-left:3rem; text-align:center;")
                                                label.control-label(for='name') Name *
                                            .col-sm-6
                                                input#updateName.form-control(type='text', name='date',style='width: 265px;', autocomplete="off", required)
                                        .row.form-group
                                            .col-sm-3(style="margin-top:0.5rem; margin-left:3rem; text-align:center;")
                                                label.control-label(for='name') Type *
                                            .col-sm-6
                                                select#updateType.form-select.form-control(name='type',style='width: 265px;', required )
                                                    option.form-control(value="0") Income
                                                    option.form-control(value="1") Expense
                                        .row.form-group
                                            .col-sm-3(style="margin-top:0.5rem; margin-left:3rem; text-align:center;")
                                                label.control-label(for='notes') Notes
                                            .col-sm-6
                                                textarea#updateNotes.form-control(name="notes", cols="30", rows="4", placeholder='Comments' style="resize:none;")
                                    .modal-footer
                                        input#id(type='hidden',name='id', value='new')
                                        input#saveUpdateCategory.btn.btn-primary(type='submit', value='Save')

        .panel-body
            //- form#divdate.form-inline.row
            //-     .form-group.col-md-2
            //-         select#soldToFilter.soldToFilter.soldToFilter-select2.form-control(name='soldTo',style='width: 150px;')
            //-     .form-group.col-md-2
            //-         select#conditionFilter.conditionFilter-select2.form-control(name='condition',style='width: 150px;')
            //-     .form-group.col-md-2
            //-     button.btn.btn-primary(type="submit", id="load") Load
        
        .adv-table
            table#categoryTable.display.table.table-bordered(cellpadding='0', cellspacing='0', border='0', style= 'width:100%;')
                thead
                    tr
                        th(style = "text-align: center; max-width: 8rem;") id
                        th(style = "text-align: center;  max-width: 25rem;") Name
                        th(style = "text-align: center;") Type
                        th(style = "text-align: center; max-width: 25rem;") Notes
                        th(style = "text-align: center; max-width: 20rem;") Created At
                        th(style = "text-align: center;") Actions
                tbody
                       
