block content 
    include ./sidebar.jade
        .row
            .col-sm-12
                section.panel
                    header.panel-heading
                        | Transactions
                        .btn-group.pull-right(style='margin:-8px 0 0;')
                            button#addTransaction.btn.btn-success(href='#consumableEntryModal', data-toggle='modal')
                                | Add Transaction
                                i.fa.fa-plus
                    #consumableEntryModal.modal.fade(aria-hidden='true', aria-labelledby='myModalLabel', role='dialog', data-keyboard="true", data-backdrop="static")
                            .modal-dialog
                                .modal-content
                                    form#addTransactionForm(role='form')
                                        .modal-header 
                                            button.close(aria-hidden='true', data-dismiss='modal', type='button') ×
                                            h4.modal-title Add Transaction
                                        .modal-body
                                            .row.form-group
                                                .col-sm-3(style="margin-top:0.5rem; margin-left:3rem; text-align:center;")
                                                    label.control-label(for='name') Category *
                                                .col-sm-6
                                                    select#category.form-select.form-control(name='category',style='width: 265px;', required )
                                                        option(value="") Select Category
                                            .row.form-group
                                                .col-sm-3(style="margin-top:0.5rem; margin-left:3rem; text-align:center;")
                                                    label.control-label(for='name') Type *
                                                .col-sm-6
                                                    select#type.form-select.form-control(name='type',style='width: 265px;', required )
                                                        option.form-control(value="0") Income
                                                        option.form-control(value="1") Expense
                                            .row.form-group
                                                .col-sm-3(style="margin-top:0.5rem; margin-left:3rem; text-align:center;")
                                                    label.control-label(for='name') Date *
                                                .col-sm-6
                                                    input#date.form-control(type='datetime-local', name='date',style='width: 265px;', autocomplete="off", required)
                                            .row.form-group
                                                .col-sm-3(style="margin-top:0.5rem; margin-left:3rem; text-align:center;")
                                                    label.control-label(for='name') Amount *
                                                .col-sm-6
                                                    input#amoount.form-control(type='number', name='amount',style='width: 265px;', autocomplete="off", required)
                                            .row.form-group
                                                .col-sm-3(style="margin-top:0.5rem; margin-left:3rem; text-align:center;")
                                                    label.control-label(for='notes') Notes
                                                .col-sm-6
                                                    textarea#notes.form-control(name="notes", cols="30", rows="4", placeholder='Comments' style="resize:none;")
                                        .modal-footer
                                            input#saveAddTransaction.btn.btn-primary(type='submit', value='Save')
                    
                    #updateTransaction.modal.fade(aria-hidden='true', aria-labelledby='myModalLabel', role='dialog', data-keyboard="true", data-backdrop="static")
                        .modal-dialog
                            .modal-content
                                form#updateTransactionForm(role='form')
                                    .modal-header 
                                        button.close(aria-hidden='true', data-dismiss='modal', type='button') ×
                                        h4.modal-title Update Transaction
                                    .modal-body
                                        .row.form-group
                                            .col-sm-3(style="margin-top:0.5rem; margin-left:3rem; text-align:center;")
                                                label.control-label(for='name') Category *
                                            .col-sm-6
                                                select#updateCategory.form-select.form-control(name='category',style='width: 265px;', required )
                                                    option(value="") Select Category
                                                    option.form-control(value="1") Expense
                                        .row.form-group
                                            .col-sm-3(style="margin-top:0.5rem; margin-left:3rem; text-align:center;")
                                                label.control-label(for='name') Type *
                                            .col-sm-6
                                                select#updateType.form-select.form-control(name='type',style='width: 265px;', required )
                                                    option.form-control(value="0") Income
                                                    option.form-control(value="1") Expense
                                        .row.form-group
                                            .col-sm-3(style="margin-top:0.5rem; margin-left:3rem; text-align:center;")
                                                label.control-label(for='name') Date *
                                            .col-sm-6
                                                input#updateDate.form-control(type='datetime-local', name='date',style='width: 265px;', autocomplete="off", required)
                                        .row.form-group
                                            .col-sm-3(style="margin-top:0.5rem; margin-left:3rem; text-align:center;")
                                                label.control-label(for='name') Amount *
                                            .col-sm-6
                                                input#updateAmount.form-control(type='number', name='amount',style='width: 265px;', autocomplete="off", required)
                                        .row.form-group
                                            .col-sm-3(style="margin-top:0.5rem; margin-left:3rem; text-align:center;")
                                                label.control-label(for='notes') Notes
                                            .col-sm-6
                                                textarea#updateNotes.form-control(name="notes", cols="30", rows="4", placeholder='Comments' style="resize:none;")
                                    .modal-footer
                                        input#id(type='hidden',name='id', value='new')
                                        input#saveUpdateTransaction.btn.btn-primary(type='submit', value='Save')

