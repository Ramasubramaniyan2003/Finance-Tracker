      /* Mobile View: max-width of 600px */
      @media only screen and (max-width: 600px) {
      #viewport {
        width: 100%;
        padding-left: 0;

      }

      #sidebar {
        width: 100%; 
        position: relative; 
        background: #37474F;
        -webkit-transition: all 0.5s ease;
        -moz-transition: all 0.5s ease;
        -o-transition: all 0.5s ease;
        transition: all 0.5s ease;


        z-index: 1000;
        overflow-y: auto;
      }

      #sidebar .nav a {
        text-align: center;
        float: none; /* Remove floating */
      }

      #sidebar .nav a:hover{
      background: none;
      color: #ECEFF1;
      }
      #sidebar header {
      background-color: #263238;
