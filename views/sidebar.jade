      }

      #sidebar .nav a i{
      margin-right: 16px;
      }
      }

      @media only screen and (min-width: 600px) {
      #viewport {
        padding-left: 250px;
        width: 100%;
        transition: all 0.5s ease;
      }

      #sidebar {
        width: 250px; 
        position: fixed; 
        height: 100%;
        top: 0;
        left: 0;
        background: #37474F;
        transition: all 0.5s ease;
        z-index: 1000;
        overflow-y: auto;
      }

      #sidebar .nav a {
        text-align: left;
      }

      }

